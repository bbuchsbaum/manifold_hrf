  plot(xi1, xi2, 
       col = cols[col_idx], pch = 19, cex = 0.5,
       main = sprintf("Manifold Coordinates (Dims %d-%d)", dims[1], dims[2]),
       xlab = sprintf("%d", dims[1]),
       ylab = sprintf("%d", dims[2]))
}


