    # 1. HRF shapes (sample)
    .plot_hrf_shapes(x, n_sample = 20)
    
    # 2. Amplitude distribution
    .plot_amplitude_distribution(x)
    
    # 3. Manifold coordinates
    .plot_manifold_coords(x)
    
