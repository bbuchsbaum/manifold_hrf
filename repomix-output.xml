plot.mhrf_result <- function(x, type = "diagnostic", voxels = NULL, 
                            conditions = NULL, ...) {
  
  type <- match.arg(type, c("diagnostic", "hrf", "amplitudes", "manifold"))
  
  if (type == "diagnostic") {
